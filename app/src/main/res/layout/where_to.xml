<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21D4FD">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.v7.widget.CardView
        android:id="@+id/constraint_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_background"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!--where to edit text-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/whereTo_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/colorWhite"
                android:hint="I am from "
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:nextFocusLeft="@id/whereTo_et"
                android:nextFocusUp="@id/whereTo_et"
                android:padding="5dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textSize="16sp" />

            <!--where to edit text-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/where_from_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whereTo_et"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/colorWhite"
                android:hint="I am going to "
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:padding="5dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textSize="16sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--floating action button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@color/blue"
        android:backgroundTint="@color/darkBlue"
        android:src="@drawable/ic_check_circle_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
